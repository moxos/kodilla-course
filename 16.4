SELECT N.NAME, S.SUMMARY FROM ISSUESLISTS N JOIN ISSUES S ON N.ID = S.ISSUESLIST_ID;
SELECT S.SUMMARY, F.FIRSTNAME, F.LASTNAME FROM ISSUES S JOIN USERS F ON S.USER_ID_ASSIGNEDTO = F.ID;
SELECT F.FIRSTNAME, F.LASTNAME, COUNT(*) AS ISSUES_NUMBER FROM USERS F JOIN ISSUES U ON F.ID = U.USER_ID_ASSIGNEDTO GROUP BY U.USER_ID_ASSIGNEDTO;